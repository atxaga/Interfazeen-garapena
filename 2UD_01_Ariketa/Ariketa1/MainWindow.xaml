<Window x:Class="Ariketa1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ataza Kudeatzailea" Height="450" Width="800">
	<Grid>
		<DataGrid x:Name="dgAtazak"
                  AutoGenerateColumns="False"
                  Margin="10,10,10,60"
                  CanUserAddRows="True"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  CellEditEnding="dgAtazak_CellEditEnding">

			<DataGrid.Columns>
				<DataGridTextColumn Header="Titulua" Binding="{Binding Titulua, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
				<DataGridComboBoxColumn Header="Lehentasuna"
                                        SelectedItemBinding="{Binding Lehentasuna, UpdateSourceTrigger=PropertyChanged}"
                                        Width="100">
					<DataGridComboBoxColumn.ItemsSource>
						<x:Array Type="{x:Type sys:String}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
							<sys:String>Baxua</sys:String>
							<sys:String>Ertaina</sys:String>
							<sys:String>Handia</sys:String>
						</x:Array>
					</DataGridComboBoxColumn.ItemsSource>
				</DataGridComboBoxColumn>
				<DataGridTextColumn Header="Azken eguna"
                                    Binding="{Binding AzkenEguna, StringFormat=\{0:yyyy-MM-dd\}, UpdateSourceTrigger=PropertyChanged}"
                                    Width="120"/>
				<DataGridCheckBoxColumn Header="Egina" Binding="{Binding Egina, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
			<Button Content="Berria" Width="70" Margin="5" Click="BtnBerria_Click"/>
			<Button Content="Editatu" Width="70" Margin="5" Click="BtnEditatu_Click"/>
			<Button Content="Ezabatu" Width="70" Margin="5" Click="BtnEzabatu_Click"/>
			<Button Content="Irten" Width="70" Margin="5" Click="BtnIrten_Click"/>
		</StackPanel>
	</Grid>
</Window>
