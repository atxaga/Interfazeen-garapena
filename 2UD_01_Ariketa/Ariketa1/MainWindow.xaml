<Window x:Class="Ariketa1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="dgAtazak"
                  AutoGenerateColumns="False"
                  Margin="10,10,10,50"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Titulua" Binding="{Binding Titulua}" Width="*"/>
                <DataGridTextColumn Header="Lehentasuna" Binding="{Binding Lehentasuna}" Width="120"/>
                <DataGridTextColumn Header="Azken eguna" Binding="{Binding AzkenEguna}" Width="120"/>
                <DataGridCheckBoxColumn Header="Egina" Binding="{Binding Egina}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="Berria" Width="70" Margin="5"/>
            <Button Content="Editatu" Width="70" Margin="5"/>
            <Button Content="Ezabatu" Width="70" Margin="5"/>
            <Button Content="Irten" Width="70" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
