<Window x:Class="Ariketa1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label1"  Content="1º Fila" HorizontalAlignment="Left" Margin="58,101,0,0" VerticalAlignment="Top" Height="25" Width="96"/>
        <ComboBox HorizontalAlignment="Left" Margin="46,153,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Imagen 1" />
            <ComboBoxItem Content="Imagen 2"/>
            <ComboBoxItem Content="Imagen 3"/>
        </ComboBox>

        <CheckBox Content="Imagen 4" HorizontalAlignment="Left" Margin="70,258,0,0" VerticalAlignment="Top" Checked="CheckBox1_Checked" Unchecked="CheckBox1_Unchecked" />
        <CheckBox Content="Imagen 5" HorizontalAlignment="Left" Margin="70,297,0,0" VerticalAlignment="Top" Checked="CheckBox2_Checked" Unchecked="CheckBox2_Unchecked"/>
        <CheckBox Content="Imagen 6" HorizontalAlignment="Left" Margin="70,336,0,0" VerticalAlignment="Top" Checked="CheckBox3_Checked" Unchecked="CheckBox3_Unchecked"/>
        <Label Content="2º Fila" HorizontalAlignment="Left" Margin="46,217,0,0" VerticalAlignment="Top" Width="108"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="624,376,0,0" VerticalAlignment="Top" Height="26" Width="86" Click="Button_Salir_Click"/>
        <Label Content="Mis imagenes" HorizontalAlignment="Left" Margin="333,62,0,0" VerticalAlignment="Top" Height="37" Width="109"/>
        <Image x:Name="imagen1" Source="imagenes/imagen1.jpg" HorizontalAlignment="Left" Height="100" Margin="275,114,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>
        <Image x:Name="imagen2" Source="imagenes/imagen2.jpg" HorizontalAlignment="Left" Height="100" Margin="442,114,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>
        <Image x:Name="imagen3" Source="imagenes/imagen3.jpg" HorizontalAlignment="Left" Height="100" Margin="624,114,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>
        <Image x:Name="imagen4" Source="imagenes/imagen4.jpg" HorizontalAlignment="Left" Height="100" Margin="275,243,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>
        <Image x:Name="imagen5" Source="imagenes/imagen5.jpg" HorizontalAlignment="Left" Height="88" Margin="442,232,0,0" VerticalAlignment="Top" Width="91" Visibility="Hidden"/>
        <Image x:Name="imagen6" Source="imagenes/imagen6.jpg" HorizontalAlignment="Left" Height="100" Margin="624,243,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>

    </Grid>
</Window>
