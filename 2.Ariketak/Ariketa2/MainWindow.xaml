<Window x:Class="Ariketa2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="buttonAñadir" Content="Añadir" HorizontalAlignment="Left" Margin="569,44,0,0" VerticalAlignment="Top" Height="35" Width="87" Click="Button_Añadir_Click"/>
        <Button x:Name="buttonEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="569,109,0,0" VerticalAlignment="Top" Height="35" Width="87" Click="Button_Eliminar_Click"/>
        <Button x:Name="buttonBorrarLista" Content="Borrar lista" HorizontalAlignment="Left" Margin="569,170,0,0" VerticalAlignment="Top" Height="35" Width="87" Click="Button_BorrarLista_Click"/>
        <ListBox x:Name="lstAmigos" HorizontalAlignment="Left" Margin="249,91,0,0" VerticalAlignment="Top" Width="118" Height="126" MouseDoubleClick="Button_Amigos_MouseDoubleClick"/>
        <Label Content="Lista amigos" HorizontalAlignment="Left" Margin="249,25,0,0" VerticalAlignment="Top" Height="32" Width="85"/>
        <Label Content="Amigo seleccionado" HorizontalAlignment="Left" Margin="249,255,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAmigoSeleccionado" HorizontalAlignment="Left" Margin="249,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Amigo nuevo" HorizontalAlignment="Left" Margin="249,323,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtAmigoNuevo" HorizontalAlignment="Left" Margin="249,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Salir" HorizontalAlignment="Left" Margin="569,331,0,0" VerticalAlignment="Top" Height="41" Width="100" Click="Button_Salir_Click"/>
    </Grid>
</Window>
