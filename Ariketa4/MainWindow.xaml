        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Label Content="Label" HorizontalAlignment="Left" Margin="207,108,0,0" VerticalAlignment="Top" Height="28" Width="80"/>
        <TextBox x:Name="usuariobox" HorizontalAlignment="Left" Margin="292,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="usuariobox_TextChanged"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="207,148,0,0" VerticalAlignment="Top" Height="28" Width="80" Grid.RowSpan="2"/>

        <Button Content="Aceptar" HorizontalAlignment="Left" Margin="167,62,0,0" VerticalAlignment="Top" Width="85" Grid.Row="1" Click="Button_aceptar_Click"/>
