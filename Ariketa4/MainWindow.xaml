        <Button Content="Salir" HorizontalAlignment="Left" Margin="400,62,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.812,0.45" Width="92" Grid.Row="1" Click="Button_salir_Click"/>
        <Label x:Name="resultadolabel" HorizontalAlignment="Left" Margin="253,121,0,0" Grid.Row="1" VerticalAlignment="Top" Width="159"/>
        <PasswordBox x:Name="contraseñabox" HorizontalAlignment="Left" Margin="292,153,0,0" VerticalAlignment="Top" Width="120" Grid.RowSpan="2"/>

    </Grid>
</Window>
