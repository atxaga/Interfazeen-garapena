<Window x:Class="_3UD_Ariketa_ikusOsagaiak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:_3UD_Ariketa_ikusOsagaiak.ViewModels"
        xmlns:comp="clr-namespace:_3UD_Ariketa_ikusOsagaiak.Views.Components"
        Title="Sistema de Reservas" Height="700" Width="1000">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Transporte:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox ItemsSource="{Binding TransportModes}"
                          SelectedItem="{Binding SelectedMode}"
                          Width="140" />
            </StackPanel>

            <Separator Margin="0,8"/>

            <comp:SeatMapControl Seats="{Binding CurrentZone.Seats}"
                                 SeatClickCommand="{Binding SeatClickCommand}"
                                 Columns="{Binding Columns}"
                                 MinHeight="420"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Reservar" Command="{Binding ReserveCommand}" Margin="5" Width="120"/>
                <Button Content="Cancelar" Command="{Binding CancelCommand}" Margin="5" Width="120"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Detalles de reserva" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Fecha:" VerticalAlignment="Center" Width="60"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,4">
                <TextBlock Text="Hora:" VerticalAlignment="Center" Width="60"/>
                <TextBox Text="{Binding SelectedTime, StringFormat='hh\\:mm', Mode=TwoWay}" Width="80" />
                <TextBlock Text=" (formato HH:mm)" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="11" Foreground="Gray"/>
            </StackPanel>

            <Separator Margin="0,8"/>

            <TextBlock Text="Reservas actuales" FontWeight="SemiBold" Margin="0,4"/>
            <ListBox ItemsSource="{Binding CurrentZone.Seats}" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Id}" Width="60"/>
                            <TextBlock Text="{Binding Status}" Width="80"/>
                            <TextBlock Text="{Binding ReservedFor, StringFormat='{}{0:G}'}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>

